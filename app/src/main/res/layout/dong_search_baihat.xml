<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:id="@+id/imageViewSearchbaihat"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <TextView
        android:id="@+id/textViewSearchtenbaihat"
        android:textSize="18sp"
        android:textColor="#716B6B"
        android:text="Ca si"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imageViewSearchbaihat"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewSearchbaihat"/>
    <TextView
        android:id="@+id/textViewSeachCaSi"
        android:textSize="18sp"
        android:textColor="#0a0a0a"
        android:text="Ten bai hat"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imageViewSearchbaihat"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imageViewSearchluotthich"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:foreground="@android:drawable/btn_star_big_on"
        android:src="@drawable/ic_next" />
</RelativeLayout>